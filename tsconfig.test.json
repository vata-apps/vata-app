{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/managers/**/*",
    "src/db/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "src/PreferencesApp.tsx",
    "src/TreeManagerTest.tsx"
  ]
}
