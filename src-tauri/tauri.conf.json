{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vata-app",
  "version": "0.1.0",
  "identifier": "com.stivaugoin.vata-app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vata-app",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "sql:default",
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:allow-close",
            "fs:default",
            "fs:allow-exists",
            "fs:allow-mkdir",
            "fs:allow-remove",
            "fs:allow-read-dir",
            "fs:allow-appdata-read",
            "fs:allow-appdata-write",
            "fs:allow-appdata-meta",
            "fs:allow-appdata-read-recursive",
            "fs:allow-appdata-write-recursive",
            "fs:allow-appdata-meta-recursive",
            "store:default",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-center",
            "core:webview:allow-create-webview-window",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size"
          ]
        },
        {
          "identifier": "preferences-capability",
          "description": "Capability for the preferences window",
          "windows": ["preferences"],
          "permissions": [
            "core:default",
            "store:default",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:window:allow-center"
          ]
        }
      ]
    }
  },
  "plugins": {
    "sql": {}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
